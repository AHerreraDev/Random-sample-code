<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Passport App</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        {{#if success_msg}}
            <div> {{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
            <div> {{error_msg}}</div>
        {{/if}}
        {{#if error}}
            <div> {{error}}</div>
        {{/if}}
        <!-- This is from the express validator  -->
        {{#if errors}}
            {{#each errors}}
                {{msg}}
            {{/each}}
        {{/if}}
        {{{body}}}
    </body>
</html>
